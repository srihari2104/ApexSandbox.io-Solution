public String registerStudent(String name, String phone, String email) {
    /**
    apxio__Student__c  obj = new apxio__Student__c();
    obj.Name = name;
    obj.apxio__Email__c = email;
    obj.apxio__Phone__c = phone;

    insert obj;
    return obj.apxio__Registration_Number__c;
    **/
    apxio__Student__c student = new apxio__Student__c();
        student.apxio__Name__c = name;
        student.apxio__Phone__c = phone;
        student.apxio__Email__c = email;

        try {
            insert student;
            return student.apxio__Registration_Number__c;
        } catch (DmlException e) {
            System.debug('An error occurred while registering the student: ' + e.getMessage());
        }
          
}