public List<apxio__Student__c> selectUnreachableStudents() {
    List<apxio__Student__c> unreachableStudents = [SELECT Id, Name
                                                      FROM apxio__Student__c
                                                      WHERE apxio__Student__c.apxio__Active__c = true
                                                          AND (apxio__Student__c.apxio__Email__c = null OR apxio__Student__c.apxio__Phone__c = null)
                                                      ORDER BY Name ASC];

        return unreachableStudents;
}